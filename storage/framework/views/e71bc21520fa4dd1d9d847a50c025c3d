	  	jQuery(this).parent().next().fadeIn( "slow", function() {
		// Animation complete.
	  	});
	  });
	  jQuery('.close_icon').click(function(){
		jQuery(this).parent().fadeOut( "slow", function() {
		// Animation complete.
	  });
		});
		  jQuery(document).on('click','.close_btn',function(){
		  jQuery(this).parent().fadeOut("slow",function(){});
		});
  </script> 
